.ui.form.panel
  #control-panel.ui.attached.top.inverted.segment.socket-state
    .ui.header.inverted
      PROTOTYPE CONTROL PANEL
      .sub.header#url
  .ui.segment.attached#server-control
    %form.ui.form.server-control
      .three.fields
        .field
          %label CLOUD
          .ui.labeled.input
            .ui.label ws://   
            %input.param{type:"text", name:"host", value:"162.243.120.86"}
        .field
          %label PORT
          %input.param{type:"number", name:"port", value: 3001}
        .field
          %label &nbsp;
          %button.connect.blue.ui.button.fluid{type:"submit"}
            CONNECT
  .ui.segment.attached
    #editor2.editor
  .ui.segment.attached.bottom
    .ui.large.buttons
      %button#run2.ui.button
        RUN
    
            

          
:coffeescript

  $ -> 
    window.NAME = "prototype-panel"
    window.VERSION = "1.0"
    window.DEFAULT_EVENTS = ""

    editor2 = ace.edit("editor2");
    editor2.setTheme("ace/theme/twilight")
    JavaScriptMode = ace.require("ace/mode/javascript").Mode
    editor2.session.setMode(new JavaScriptMode())
    editor2.setValue('message={"api":{"command":"LED_ON","params":{}}};\nsocket.send(JSON.stringify(message));');
    $('#run2').click ()->
      code = editor2.getValue()
      eval(code)
    

   
        
    return

